@model ECommerceWebsite.Models.ViewModels.SidebarViewModel

@{
    ViewBag.Title = "Edit Sidebar";
}

<h3>Edit Sidebar</h3>

@if (TempData["SM"] != null)
{
    <div class="alert alert-success">
        @TempData["SM"]
    </div>
}

<hr />

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.Id)

        <div class="form-group">
            <label class="control-label col-md-2" for="HasSideBar">Sidebar</label>
            <div class="col-md-10">
                @Html.TextAreaFor(model => model.Body, new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.Body, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-default btn-success" />
            </div>
        </div>
    </div>
    <hr />
}


@section Scripts {
<script src="~/Scripts/ckeditor/ckeditor.js"></script>

<script>
    CKEDITOR.replace("Body");
</script>

}
