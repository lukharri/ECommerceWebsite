@model IEnumerable<ECommerceWebsite.Models.CategoryViewModel>

@{
    ViewBag.Title = "Categories";
}

<h3>Categories</h3>

<div class="new-cat">
    <input type="text" id="new-cat-name" class="form-control"/>
    <p>
        <a id="new-cat-a" type="button" class="btn btn-primary btn-sm" href=# style="margin-top: 5px; margin-bottom: 15px;">
            <span class="glyphicon glyphicon-plus"></span>
            <span>Create</span>
        </a>

        <span class="ajax-text">
            <img src="~/Content/img/ajax-loader.gif" />
        </span>
    </p>
</div>

@if (!Model.Any())
{
    <h3 class="text-center">There are no categories.</h3>
}
else
{
    <table class="table sorting categories" id="pages">
        <tr class="home">
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr id="id_@item.Id">
                <td>
                    <div class="ajax-div-td"></div>
                    @Html.EditorFor(modelItem => item.Name, new { htmlAttributes = new { @class = "form-control", @readonly = "readonly" } })
                </td>
                <td>
                    <a type="button" class="btn btn-danger btn-sm delete"
                       id="delete-category-btn"
                       href="@Url.Action("DeleteCategory", new { id = item.Id, @class="delete" } )"
                       style="border-radius: 3px;">
                        <span  class="glyphicon glyphicon-trash"></span>
                    </a>
                </td>
            </tr>
        }

    </table>
}

@section Scripts {
    <script src="https://code.jquery.com/ui/1.12.0/jquery-ui.min.js"></script>
    <script></script>
}
